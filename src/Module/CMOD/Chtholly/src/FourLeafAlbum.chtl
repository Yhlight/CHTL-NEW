;; 珂朵莉四叶窗相册
;; 严格按照CHTL语法文档要求实现

[Template] @Element ChthollyFourLeafAlbum
{
    div
    {
        class: chtholly-fourleaf-album;
        
        style
        {
            .chtholly-fourleaf-album
            {
                display: grid;
                grid-template-columns: 1fr 1fr;
                grid-template-rows: 1fr 1fr;
                gap: @Var ChthollySpacing.small;
                width: 400px;
                height: 400px;
                border: 3px solid @Var ChthollyColors.primary-red;
                border-radius: 15px;
                overflow: hidden;
                box-shadow: 0 8px 25px rgba(255, 107, 107, 0.3);
                background: @Var ChthollyColors.soft-white;
                padding: @Var ChthollySpacing.medium;
            }
            
            .album-leaf
            {
                background-size: cover;
                background-position: center;
                border-radius: 8px;
                transition: all 0.3s ease;
                cursor: pointer;
                position: relative;
                overflow: hidden;
            }
            
            .album-leaf:hover
            {
                transform: scale(1.05);
                box-shadow: 0 4px 15px rgba(255, 107, 107, 0.4);
                z-index: 2;
            }
            
            .album-leaf::before
            {
                content: "";
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                background: linear-gradient(45deg, transparent, rgba(255, 107, 107, 0.2), transparent);
                opacity: 0;
                transition: opacity 0.3s ease;
            }
            
            .album-leaf:hover::before
            {
                opacity: 1;
            }
        }
        
        script
        {
            ;; 珂朵莉四叶窗相册逻辑
            console.log('🍀 珂朵莉的四叶窗相册准备就绪');
            
            const album = {{.chtholly-fourleaf-album}};
            const images = @Images || [
                'chtholly1.jpg', 'chtholly2.jpg', 'chtholly3.jpg', 'chtholly4.jpg'
            ];
            
            ;; 创建四叶窗
            images.forEach((imageSrc, index) => {
                const leaf = document.createElement('div');
                leaf.className = 'album-leaf';
                leaf.style.backgroundImage = `url(${imageSrc})`;
                
                leaf &-> click {
                    console.log('💖 查看珂朵莉照片：', imageSrc);
                    
                    ;; 创建全屏查看
                    const overlay = document.createElement('div');
                    overlay.style.cssText = `
                        position: fixed;
                        top: 0;
                        left: 0;
                        width: 100%;
                        height: 100%;
                        background: rgba(0,0,0,0.8);
                        display: flex;
                        align-items: center;
                        justify-content: center;
                        z-index: 9999;
                        cursor: pointer;
                    `;
                    
                    const fullImage = document.createElement('img');
                    fullImage.src = imageSrc;
                    fullImage.style.cssText = `
                        max-width: 90%;
                        max-height: 90%;
                        border-radius: 10px;
                        box-shadow: 0 10px 30px rgba(255, 107, 107, 0.5);
                    `;
                    
                    overlay.appendChild(fullImage);
                    document.body.appendChild(overlay);
                    
                    overlay &-> click {
                        overlay.remove();
                    };
                };
                
                album.appendChild(leaf);
            });
            
            ;; 导出控制接口
            window.ChthollyAlbum = {
                addImage: function(src) {
                    console.log('📸 添加珂朵莉照片：', src);
                },
                removeImage: function(index) {
                    console.log('🗑️ 移除照片：', index);
                }
            };
        }
    }
}