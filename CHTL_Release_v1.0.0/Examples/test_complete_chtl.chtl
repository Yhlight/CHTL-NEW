[Template]
<ChthollyButton> {
    background: linear-gradient(45deg, #ff6b6b, #4ecdc4);
    border: none;
    padding: 12px 24px;
    border-radius: 8px;
    color: white;
    font-weight: bold;
    cursor: pointer;
    transition: all 0.3s ease;
}

[Custom]
<MySpecialButton inherit="ChthollyButton"> {
    font-size: 18px;
    box-shadow: 0 6px 12px rgba(0,0,0,0.3);
    text-shadow: 1px 1px 2px rgba(0,0,0,0.5);
}

<button use="MySpecialButton">珂朵莉的按钮</button>

<script>
listen { 
    selector: ".chtl-button",
    event: "click",
    callback: printMylove { 
        target: "世界",
        message: "CJMOD功能完全实现！" 
    }
}
</script>
