[Template] @Element ChthollyFourLeafAlbum
{
    div
    {
        class: chtholly-fourleaf-album;
        
        style
        {
            .chtholly-fourleaf-album
            {
                display: grid;
                grid-template-columns: 1fr 1fr;
                grid-template-rows: 1fr 1fr;
                gap: @Var ChthollySpacing.small;
                width: 400px;
                height: 400px;
                border: 3px solid @Var ChthollyColors.primary-red;
                border-radius: 15px;
                overflow: hidden;
                box-shadow: 0 8px 25px rgba(255, 107, 107, 0.3);
                background: @Var ChthollyColors.soft-white;
                padding: @Var ChthollySpacing.medium;
            }
            
            .album-leaf
            {
                background-size: cover;
                background-position: center;
                border-radius: 8px;
                transition: all 0.3s ease;
                cursor: pointer;
                position: relative;
                overflow: hidden;
            }
            
            .album-leaf:hover
            {
                transform: scale(1.05);
                box-shadow: 0 4px 15px rgba(255, 107, 107, 0.4);
                z-index: 2;
            }
            
            .album-leaf::before
            {
                content: "";
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                background: linear-gradient(45deg, transparent, rgba(255, 107, 107, 0.2), transparent);
                opacity: 0;
                transition: opacity 0.3s ease;
            }
            
            .album-leaf:hover::before
            {
                opacity: 1;
            }
        }
        
