// 珂朵莉 - 四叶窗相册组件

[Template]
{
    四叶窗相册
    {
        div
        {
            class: "chtholly-four-leaf-album";
            
            style
            {
                .chtholly-four-leaf-album
                {
                    display: grid;
                    grid-template-columns: repeat(2, 1fr);
                    gap: 10px;
                    width: 400px;
                    height: 400px;
                    border-radius: 20px;
                    overflow: hidden;
                    box-shadow: 0 15px 35px rgba(0,0,0,0.1);
                    background: #fff;
                }
                
                .album-leaf
                {
                    position: relative;
                    overflow: hidden;
                    cursor: pointer;
                    transition: transform 0.3s ease;
                }
                
                .album-leaf:hover
                {
                    transform: scale(1.05);
                    z-index: 10;
                }
                
                .album-image
                {
                    width: 100%;
                    height: 100%;
                    object-fit: cover;
                    transition: filter 0.3s ease;
                }
                
                .album-leaf:hover .album-image
                {
                    filter: brightness(1.2) saturate(1.2);
                }
                
                .album-overlay
                {
                    position: absolute;
                    bottom: 0;
                    left: 0;
                    right: 0;
                    background: linear-gradient(transparent, rgba(0,0,0,0.7));
                    color: white;
                    padding: 15px;
                    transform: translateY(100%);
                    transition: transform 0.3s ease;
                }
                
                .album-leaf:hover .album-overlay
                {
                    transform: translateY(0);
                }
            }
            
            div
            {
                class: "album-leaf";
                
                img
                {
                    class: "album-image";
                    src: "images/chtholly1.jpg";
                    alt: "珂朵莉的回忆";
                }
                
                div
                {
                    class: "album-overlay";
                    text { "珂朵莉的美好时光 💫" }
                }
            }
            
            div
            {
                class: "album-leaf";
                
                img
                {
                    class: "album-image";
                    src: "images/chtholly2.jpg";
                    alt: "珂朵莉的回忆";
                }
                
                div
                {
                    class: "album-overlay";
                    text { "永远的约定 🌸" }
                }
            }
            
            div
            {
                class: "album-leaf";
                
                img
                {
                    class: "album-image";
                    src: "images/chtholly3.jpg";
                    alt: "珂朵莉的回忆";
                }
                
                div
                {
                    class: "album-overlay";
                    text { "最珍贵的记忆 ✨" }
                }
            }
            
            div
            {
                class: "album-leaf";
                
                img
                {
                    class: "album-image";
                    src: "images/chtholly4.jpg";
                    alt: "珂朵莉的回忆";
                }
                
                div
                {
                    class: "album-overlay";
                    text { "永不消逝的爱 💖" }
                }
            }
        }
    }
}