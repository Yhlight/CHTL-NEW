// CHTL编译器综合测试

use html5;

html {
    head {
        title: "CHTL编译器完整实现测试";
    }
    
    body {
        // 1. 基本元素和属性
        div {
            id: "container";
            class: "main-container";
            
            // 2. 文本节点
            text { "欢迎使用CHTL编译器！" }
            
            // 3. 嵌套元素
            p {
                text { "这是一个功能完整的CHTL编译器。" }
            }
            
            // 4. 局部样式块（内联样式）
            div {
                style {
                    background: #f9f9f9;
                    padding: 20px;
                    margin: 10px;
                }
                
                text { "带有内联样式的元素" }
            }
        }
        
        // 5. 生成器注释
        -- 这个注释会出现在生成的HTML中
        
        // 6. 列表示例
        ul {
            li { text { "第一项" } }
            li { text { "第二项" } }
            li { text { "第三项" } }
        }
    }
}