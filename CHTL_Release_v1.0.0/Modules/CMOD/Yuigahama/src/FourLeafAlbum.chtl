;; 由比滨结衣四叶窗相册
;; 严格按照CHTL语法文档要求实现

[Template] @Element YuigahamaFourLeafAlbum
{
    div
    {
        class: yuigahama-fourleaf-album;
        
        style
        {
            .yuigahama-fourleaf-album
            {
                display: grid;
                grid-template-columns: 1fr 1fr;
                grid-template-rows: 1fr 1fr;
                gap: @Var YuigahamaSpacing.small;
                width: 400px;
                height: 400px;
                border: 3px solid @Var YuigahamaColors.primary-pink;
                border-radius: 20px;
                overflow: hidden;
                box-shadow: 0 8px 25px rgba(255, 182, 193, 0.3);
                background: @Var YuigahamaColors.gentle-white;
                padding: @Var YuigahamaSpacing.medium;
            }
            
            .album-leaf
            {
                background-size: cover;
                background-position: center;
                border-radius: 12px;
                transition: all 0.3s ease;
                cursor: pointer;
                position: relative;
                overflow: hidden;
                border: 2px solid @Var YuigahamaColors.warm-coral;
            }
            
            .album-leaf:hover
            {
                transform: scale(1.08);
                box-shadow: 0 6px 18px rgba(255, 182, 193, 0.5);
                z-index: 2;
            }
            
            .album-leaf::after
            {
                content: "🌸";
                position: absolute;
                top: 50%;
                left: 50%;
                transform: translate(-50%, -50%);
                font-size: 24px;
                opacity: 0;
                transition: opacity 0.3s ease;
            }
            
            .album-leaf:hover::after
            {
                opacity: 1;
            }
        }
        
        script
        {
            ;; 由比滨结衣四叶窗相册逻辑
            console.log('🌸 雅哈喽～由比滨结衣的四叶窗相册准备就绪！');
            
            const album = {{.yuigahama-fourleaf-album}};
            const images = @Images || [
                'yuigahama1.jpg', 'yuigahama2.jpg', 'yuigahama3.jpg', 'yuigahama4.jpg'
            ];
            
            ;; 创建四叶窗
            images.forEach((imageSrc, index) => {
                const leaf = document.createElement('div');
                leaf.className = 'album-leaf';
                leaf.style.backgroundImage = `url(${imageSrc})`;
                
                leaf &-> click {
                    console.log('🌸 雅哈喽～查看照片：', imageSrc);
                    
                    ;; 创建可爱的全屏查看
                    const overlay = document.createElement('div');
                    overlay.style.cssText = `
                        position: fixed;
                        top: 0;
                        left: 0;
                        width: 100%;
                        height: 100%;
                        background: linear-gradient(45deg, rgba(255, 182, 193, 0.9), rgba(255, 192, 203, 0.9));
                        display: flex;
                        align-items: center;
                        justify-content: center;
                        z-index: 9999;
                        cursor: pointer;
                    `;
                    
                    const fullImage = document.createElement('img');
                    fullImage.src = imageSrc;
                    fullImage.style.cssText = `
                        max-width: 90%;
                        max-height: 90%;
                        border-radius: 15px;
                        box-shadow: 0 10px 30px rgba(255, 182, 193, 0.6);
                        border: 3px solid white;
                    `;
                    
                    overlay.appendChild(fullImage);
                    document.body.appendChild(overlay);
                    
                    overlay &-> click {
                        console.log('👋 再见～关闭照片');
                        overlay.remove();
                    };
                };
                
                album.appendChild(leaf);
            });
            
            ;; 导出控制接口
            window.YuigahamaAlbum = {
                addImage: function(src) {
                    console.log('📸 雅哈喽～添加照片：', src);
                },
                showSlideshow: function() {
                    console.log('🎬 开始幻灯片播放～');
                }
            };
        }
    }
}