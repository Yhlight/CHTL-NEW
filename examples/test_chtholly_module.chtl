// 珂朵莉模块使用示例
use html5;

// 导入珂朵莉官方模块
[Import] @Chtl from chtl::chtholly;

// 使用珂朵莉的命名空间
html {
    head {
        title { text { "珂朵莉主题示例 - 世界上最幸福的女孩" } }
    }
    
    body {
        // 使用珂朵莉页面元素
        @Element ChthollyPage from chtholly {
            // 添加樱花飘落效果
            @Element ChthollySakura from chtholly;
            
            // 使用容器
            @Element ChthollyContainer from chtholly {
                // 导航栏
                @Element ChthollyNav from chtholly {
                    div class="nav-brand" {
                        style {
                            font-size: 24px;
                            font-weight: bold;
                            color: chtholly.ChthollyThemeVars(primaryRed);
                        }
                        text { "珂朵莉的世界" }
                    }
                    
                    div class="nav-links" {
                        style {
                            display: flex;
                            gap: 20px;
                        }
                        
                        a href="#about" {
                            style {
                                @Style ChthollyText from chtholly;
                                color: chtholly.ChthollyThemeVars(textPrimary);
                                text-decoration: none;
                                
                                &:hover {
                                    color: chtholly.ChthollyThemeVars(primaryRed);
                                }
                            }
                            text { "关于" }
                        }
                        
                        a href="#gallery" {
                            style {
                                @Style ChthollyText from chtholly;
                                color: chtholly.ChthollyThemeVars(textPrimary);
                                text-decoration: none;
                                
                                &:hover {
                                    color: chtholly.ChthollyThemeVars(primaryRed);
                                }
                            }
                            text { "画廊" }
                        }
                    }
                }
                
                // 主要内容区域
                section id="hero" {
                    style {
                        text-align: center;
                        padding: 60px 0;
                    }
                    
                    h1 {
                        style {
                            @Style ChthollyGradient from chtholly;
                            -webkit-background-clip: text;
                            -webkit-text-fill-color: transparent;
                            font-size: 48px;
                            margin-bottom: 20px;
                        }
                        text { "珂朵莉·诺塔·瑟尼欧里斯" }
                    }
                    
                    p {
                        style {
                            @Style ChthollyText from chtholly;
                            font-size: 20px;
                            color: chtholly.ChthollyThemeVars(textSecondary);
                            margin-bottom: 30px;
                        }
                        text { "最幸福的时光，是与你在一起的日子" }
                    }
                    
                    button {
                        style {
                            @Style ChthollyButton from chtholly;
                        }
                        text { "了解更多" }
                    }
                }
                
                // 卡片展示区
                section id="cards" {
                    style {
                        display: grid;
                        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
                        gap: 20px;
                        margin: 40px 0;
                    }
                    
                    div {
                        style {
                            @Style ChthollyCard from chtholly;
                        }
                        h3 {
                            style {
                                color: chtholly.ChthollyThemeVars(primaryRed);
                                margin-bottom: 10px;
                            }
                            text { "记忆的碎片" }
                        }
                        p {
                            style {
                                @Style ChthollyText from chtholly;
                            }
                            text { "即使记忆会消失，但我们共同度过的时光永远闪耀着光芒。" }
                        }
                    }
                    
                    div {
                        style {
                            @Style ChthollyCard from chtholly;
                        }
                        h3 {
                            style {
                                color: chtholly.ChthollyThemeVars(primaryOrange);
                                margin-bottom: 10px;
                            }
                            text { "黄金妖精" }
                        }
                        p {
                            style {
                                @Style ChthollyText from chtholly;
                            }
                            text { "作为黄金妖精，守护着这个世界，直到最后一刻。" }
                        }
                    }
                    
                    div {
                        style {
                            @Style ChthollyCard from chtholly;
                        }
                        h3 {
                            style {
                                color: chtholly.ChthollyThemeVars(accentBlue);
                                margin-bottom: 10px;
                            }
                            text { "幸福的定义" }
                        }
                        p {
                            style {
                                @Style ChthollyText from chtholly;
                            }
                            text { "幸福就是能够爱着某个人，被某个人所爱着。" }
                        }
                    }
                }
                
                // 画廊区域
                section id="gallery" {
                    h2 {
                        style {
                            text-align: center;
                            font-size: 36px;
                            color: chtholly.ChthollyThemeVars(primaryRed);
                            margin-bottom: 30px;
                        }
                        text { "回忆画廊" }
                    }
                    
                    @Element ChthollyGallery from chtholly;
                }
            }
        }
        
        // 使用局部脚本和printMylove功能
        script {
            // 使用CJMOD的printMylove功能
            const artResult = printMylove {
                url: "/images/chtholly.jpg",
                mode: "ASCII",
                width: 80,
                height: 40,
                scale: 0.5
            };
            
            // 选择器自动化演示
            {{.chtholly-card}}->listen {
                click: () => {
                    console.log("卡片被点击了！");
                },
                mouseenter: () => {
                    console.log("鼠标进入卡片");
                }
            };
        }
    }
}