use html5;

[Namespace] yuigahama {

    // ä¸»é¢˜å˜é‡ç»„ - åŸºäºç”±æ¯”æ»¨çš„äººç‰©ç‰¹å¾
    [Template] @Var YuigahamaThemeVars {
        // ç”±æ¯”æ»¨çš„ä¸»é¢˜è‰² - åŸºäºå¥¹çš„å‘è‰²å’Œæ€§æ ¼
        primaryPink: "#FFB6C1";     // æ¸©æŸ”çš„ç²‰è‰²
        primaryPeach: "#FFDAB9";    // æ¡ƒè‰²
        accentOrange: "#FFA07A";    // è½»æŸ”çš„æ©™è‰²
        lightCoral: "#F08080";      // æµ…çŠç‘šè‰²
        softBrown: "#DEB887";       // æŸ”å’Œçš„æ£•è‰²ï¼ˆå‘è‰²ï¼‰
        
        // è¾…åŠ©è‰²
        bgCream: "#FFF8DC";         // å¥¶æ²¹è‰²èƒŒæ™¯
        bgWarm: "#FAF0E6";          // æ¸©æš–çš„èƒŒæ™¯è‰²
        textPrimary: "#5D4E37";     // æ¸©æŸ”çš„æ£•è‰²æ–‡å­—
        textSecondary: "#8B7355";   // æ¬¡è¦æ–‡å­—è‰²
        
        // å­—ä½“ - åœ†æ¶¦å¯çˆ±çš„é£æ ¼
        fontPrimary: "'Rounded Mplus 1c', 'Noto Sans JP', 'Microsoft YaHei', sans-serif";
        fontCute: "'M PLUS Rounded 1c', 'Comic Sans MS', cursive";
        
        // é—´è·å’Œåœ†è§’
        spacingUnit: "8px";
        borderRadius: "16px";       // æ›´åœ†æ¶¦çš„è¾¹è§’
        
        // é˜´å½±æ•ˆæœ
        softShadow: "0 2px 10px rgba(255, 182, 193, 0.3)";
        hoverShadow: "0 4px 20px rgba(255, 182, 193, 0.4)";
    }

    // åŸºç¡€æ ·å¼ç»„
    [Template] @Style YuigahamaBase {
        font-family: YuigahamaThemeVars(fontPrimary);
        color: YuigahamaThemeVars(textPrimary);
        line-height: 1.7;
        box-sizing: border-box;
        transition: all 0.3s ease;
    }

    // æ–‡æœ¬æ ·å¼ç»„ - åœ†æ¶¦å¯çˆ±
    [Template] @Style YuigahamaText {
        @Style YuigahamaBase;
        font-size: 16px;
        letter-spacing: 0.3px;
        font-family: YuigahamaThemeVars(fontCute);
    }

    // æ¸å˜æ ·å¼ç»„
    [Template] @Style YuigahamaGradient {
        background: linear-gradient(135deg,
            YuigahamaThemeVars(primaryPink) 0%,
            YuigahamaThemeVars(primaryPeach) 50%,
            YuigahamaThemeVars(lightCoral) 100%);
    }

    // è‡ªå®šä¹‰é¢œè‰²å˜é‡ç»„
    [Custom] @Var YuigahamaColors {
        primary,
        secondary,
        accent,
        bubble;
    }

    // ä¸»é¢˜æ ·å¼ç»„
    [Custom] @Style YuigahamaTheme {
        @Style YuigahamaBase;
        background: YuigahamaThemeVars(bgWarm);
        color: YuigahamaThemeVars(textPrimary);
        min-height: 100vh;
        position: relative;
        
        &::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-image: radial-gradient(circle at 20% 80%, 
                rgba(255, 182, 193, 0.1) 0%, 
                transparent 50%),
                radial-gradient(circle at 80% 20%, 
                rgba(255, 218, 185, 0.1) 0%, 
                transparent 50%);
            pointer-events: none;
        }
    }

    // å¡ç‰‡æ ·å¼ç»„ - æ¸©æŸ”åœ†æ¶¦
    [Custom] @Style YuigahamaCard {
        @Style YuigahamaBase;
        background: white;
        border-radius: YuigahamaThemeVars(borderRadius);
        box-shadow: YuigahamaThemeVars(softShadow);
        padding: calc(YuigahamaThemeVars(spacingUnit) * 3);
        margin: calc(YuigahamaThemeVars(spacingUnit) * 2);
        border: 2px solid transparent;
        background-clip: padding-box;
        position: relative;
        
        &::before {
            content: "";
            position: absolute;
            top: -2px;
            left: -2px;
            right: -2px;
            bottom: -2px;
            background: YuigahamaThemeVars(primaryPink);
            border-radius: YuigahamaThemeVars(borderRadius);
            opacity: 0;
            transition: opacity 0.3s ease;
            z-index: -1;
        }
        
        &:hover {
            transform: translateY(-2px);
            box-shadow: YuigahamaThemeVars(hoverShadow);
            
            &::before {
                opacity: 0.3;
            }
        }
    }

    // æŒ‰é’®æ ·å¼ç»„ - å›¢å­é£æ ¼
    [Custom] @Style YuigahamaButton {
        @Style YuigahamaBase;
        @Style YuigahamaGradient;
        color: white;
        border: none;
        border-radius: 50px;  // å®Œå…¨åœ†æ¶¦
        padding: calc(YuigahamaThemeVars(spacingUnit) * 1.5) calc(YuigahamaThemeVars(spacingUnit) * 4);
        font-size: 16px;
        font-weight: 600;
        cursor: pointer;
        position: relative;
        overflow: hidden;
        text-shadow: 0 1px 2px rgba(0, 0, 0, 0.1);
        
        &::after {
            content: "ğŸ¡";  // å›¢å­emoji
            position: absolute;
            right: 20px;
            top: 50%;
            transform: translateY(-50%);
            font-size: 20px;
            opacity: 0.7;
            transition: transform 0.3s ease;
        }
        
        &:hover {
            transform: scale(1.05);
            box-shadow: 0 6px 20px rgba(255, 182, 193, 0.4);
            
            &::after {
                transform: translateY(-50%) rotate(360deg);
            }
        }
        
        &:active {
            transform: scale(0.98);
        }
    }

    // å¯¹è¯æ°”æ³¡æ ·å¼
    [Custom] @Style YuigahamaBubble {
        @Style YuigahamaBase;
        background: white;
        border-radius: 20px;
        padding: calc(YuigahamaThemeVars(spacingUnit) * 2);
        position: relative;
        box-shadow: YuigahamaThemeVars(softShadow);
        margin: calc(YuigahamaThemeVars(spacingUnit) * 2);
        
        &::after {
            content: "";
            position: absolute;
            bottom: -10px;
            left: 30px;
            width: 20px;
            height: 20px;
            background: white;
            border-radius: 50%;
            box-shadow: 0 5px 10px rgba(0, 0, 0, 0.1);
        }
        
        &.right {
            &::after {
                left: auto;
                right: 30px;
            }
        }
    }

    // æ‰‹é£ç´ç»„ä»¶æ ·å¼
    [Custom] @Style YuigahamaAccordion {
        @Style YuigahamaCard;
        padding: 0;
        overflow: hidden;
        
        .accordion-header {
            padding: calc(YuigahamaThemeVars(spacingUnit) * 2);
            background: YuigahamaThemeVars(bgCream);
            cursor: pointer;
            display: flex;
            justify-content: space-between;
            align-items: center;
            font-weight: 600;
            color: YuigahamaThemeVars(textPrimary);
            transition: background 0.3s ease;
            
            &:hover {
                background: YuigahamaThemeVars(primaryPeach);
                color: white;
            }
            
            &::after {
                content: "â–¼";
                transition: transform 0.3s ease;
            }
            
            &.active::after {
                transform: rotate(180deg);
            }
        }
        
        .accordion-content {
            padding: calc(YuigahamaThemeVars(spacingUnit) * 2);
            max-height: 0;
            overflow: hidden;
            transition: max-height 0.3s ease;
            
            &.active {
                max-height: 500px;
            }
        }
    }

    // é¡µé¢å®¹å™¨
    [Template] @Element YuigahamaContainer {
        div class="yuigahama-container" {
            style {
                @Style YuigahamaBase;
                max-width: 1200px;
                margin: 0 auto;
                padding: calc(YuigahamaThemeVars(spacingUnit) * 3);
            }
        }
    }

    // éŸ³ä¹æ’­æ”¾å™¨å…ƒç´ 
    [Custom] @Element YuigahamaMusic {
        div class="yuigahama-music-player" {
            style {
                @Style YuigahamaCard;
                display: flex;
                align-items: center;
                gap: calc(YuigahamaThemeVars(spacingUnit) * 2);
            }
            
            div class="music-cover" {
                style {
                    width: 80px;
                    height: 80px;
                    border-radius: 50%;
                    overflow: hidden;
                    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
                    animation: musicRotate 20s linear infinite paused;
                    
                    &.playing {
                        animation-play-state: running;
                    }
                    
                    img {
                        width: 100%;
                        height: 100%;
                        object-fit: cover;
                    }
                }
            }
            
            div class="music-info" {
                style {
                    flex: 1;
                    
                    .song-title {
                        font-size: 18px;
                        font-weight: 600;
                        color: YuigahamaThemeVars(textPrimary);
                        margin-bottom: 4px;
                    }
                    
                    .artist {
                        font-size: 14px;
                        color: YuigahamaThemeVars(textSecondary);
                    }
                }
            }
            
            div class="music-controls" {
                style {
                    display: flex;
                    gap: calc(YuigahamaThemeVars(spacingUnit) * 1);
                    
                    button {
                        @Style YuigahamaButton;
                        padding: calc(YuigahamaThemeVars(spacingUnit) * 1);
                        width: 40px;
                        height: 40px;
                        display: flex;
                        align-items: center;
                        justify-content: center;
                        
                        &::after {
                            display: none;
                        }
                    }
                }
            }
        }
    }

    // å¤‡å¿˜å½•å…ƒç´ 
    [Custom] @Element YuigahamaMemo {
        div class="yuigahama-memo" {
            style {
                @Style YuigahamaCard;
                position: relative;
                background: linear-gradient(to bottom, 
                    YuigahamaThemeVars(bgCream) 0%, 
                    white 10%);
                
                &::before {
                    content: "";
                    position: absolute;
                    top: 0;
                    left: 40px;
                    right: 40px;
                    height: 30px;
                    background: YuigahamaThemeVars(primaryPink);
                    border-radius: 0 0 20px 20px;
                    opacity: 0.5;
                }
            }
            
            div class="memo-header" {
                style {
                    text-align: center;
                    padding: calc(YuigahamaThemeVars(spacingUnit) * 2);
                    font-size: 20px;
                    font-weight: 600;
                    color: YuigahamaThemeVars(primaryPink);
                    position: relative;
                    z-index: 1;
                }
            }
            
            div class="memo-content" {
                style {
                    padding: calc(YuigahamaThemeVars(spacingUnit) * 2);
                    min-height: 200px;
                    background-image: repeating-linear-gradient(
                        transparent,
                        transparent 28px,
                        rgba(255, 182, 193, 0.1) 28px,
                        rgba(255, 182, 193, 0.1) 30px
                    );
                    line-height: 30px;
                    font-family: YuigahamaThemeVars(fontCute);
                }
            }
        }
    }

    // æ¨±èŠ±é£˜è½æ•ˆæœ - ç”±æ¯”æ»¨ç‰ˆæœ¬ï¼ˆæ›´æ¸©æŸ”çš„ç²‰è‰²ï¼‰
    [Custom] @Element YuigahamaSakura {
        div class="yuigahama-sakura" {
            style {
                position: fixed;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                pointer-events: none;
                overflow: hidden;
                z-index: 9999;
            }
            
            div class="sakura-petal" {
                style {
                    position: absolute;
                    width: 15px;
                    height: 15px;
                    background: YuigahamaThemeVars(primaryPink);
                    border-radius: 0 100% 0 100%;
                    opacity: 0.7;
                    animation: yuigahamaSakuraFall 15s linear infinite;
                    
                    &::after {
                        content: "";
                        position: absolute;
                        width: 100%;
                        height: 100%;
                        background: YuigahamaThemeVars(primaryPeach);
                        border-radius: 0 100% 0 100%;
                        transform: rotate(45deg);
                    }
                }
            }
        }
    }

    // èŠå¤©ç•Œé¢å…ƒç´ 
    [Custom] @Element YuigahamaChat {
        div class="yuigahama-chat" {
            style {
                @Style YuigahamaCard;
                height: 500px;
                display: flex;
                flex-direction: column;
            }
            
            div class="chat-messages" {
                style {
                    flex: 1;
                    overflow-y: auto;
                    padding: calc(YuigahamaThemeVars(spacingUnit) * 2);
                    
                    .message {
                        @Style YuigahamaBubble;
                        max-width: 70%;
                        margin-bottom: calc(YuigahamaThemeVars(spacingUnit) * 2);
                        
                        &.sent {
                            margin-left: auto;
                            background: YuigahamaThemeVars(primaryPink);
                            color: white;
                        }
                    }
                }
            }
            
            div class="chat-input" {
                style {
                    display: flex;
                    gap: calc(YuigahamaThemeVars(spacingUnit) * 1);
                    padding: calc(YuigahamaThemeVars(spacingUnit) * 2);
                    border-top: 1px solid rgba(255, 182, 193, 0.2);
                    
                    input {
                        flex: 1;
                        padding: calc(YuigahamaThemeVars(spacingUnit) * 1.5);
                        border: 2px solid YuigahamaThemeVars(primaryPink);
                        border-radius: 25px;
                        font-family: YuigahamaThemeVars(fontPrimary);
                        font-size: 14px;
                        
                        &:focus {
                            outline: none;
                            border-color: YuigahamaThemeVars(lightCoral);
                        }
                    }
                    
                    button {
                        @Style YuigahamaButton;
                        padding: calc(YuigahamaThemeVars(spacingUnit) * 1.5);
                    }
                }
            }
        }
    }
}

// å…¨å±€æ ·å¼å®šä¹‰ - åŠ¨ç”»
[Origin] @Style {
    @keyframes musicRotate {
        from { transform: rotate(0deg); }
        to { transform: rotate(360deg); }
    }
    
    @keyframes yuigahamaSakuraFall {
        0% {
            top: -20px;
            left: calc(100% * var(--random-x));
            transform: translateX(0) rotate(0deg);
            opacity: 0;
        }
        10% {
            opacity: 0.7;
        }
        90% {
            opacity: 0.7;
        }
        100% {
            top: 100vh;
            left: calc(100% * var(--random-x) + 50px);
            transform: translateX(30px) rotate(720deg);
            opacity: 0;
        }
    }
}