// 综合功能测试
// 单行注释

/*
  多行注释
  测试所有已实现的功能
*/

-- 这是生成器注释，会被输出到HTML

[Configuration] {
    DEBUG_MODE = false;              // 使用=
    DISABLE_STYLE_AUTO_ADD_CLASS: false;  // 使用:
}

use html5;

[Template] @Style baseStyle {
    padding: 10px;
    margin = 5px;    // CE对等式测试
}

[Template] @Style themeStyle {
    color: #333;     // 六位十六进制颜色
    background = #fff;
    inherit @Style baseStyle;  // 继承
}

[Template] @Var colors {
    primary = blue;
    secondary: green;   // CE对等式
}

[Namespace] UI {
    [Template] @Element Button {
        button {
            style {
                @Style themeStyle;
                background-color = colors(primary);
            }
            text { "点击" }
        }
    }
}

html {
    body {
        // 测试无引号字面量
        div {
            id = container;
            class: main-content;
            
            style {
                width = 100%;
                font-family: Arial, sans-serif;  // 带空格的值
            }
            
            // 使用命名空间中的元素
            @Element Button from UI;
            
            // 局部脚本块（属于CHTL）
            script {
                console.log("CHTL script block");
            }
        }
    }
}