use html5;

html {
    body {
        div {
            id: "myDiv";
            class: "container";
            
            style {
                // 内联样式
                background: #f0f0f0;
                padding: 20px;
                
                // 类选择器
                .container {
                    border: 1px solid #ccc;
                    border-radius: 8px;
                }
                
                // ID选择器
                #myDiv {
                    min-height: 100px;
                }
                
                // 伪类选择器
                &:hover {
                    background: #e0e0e0;
                    cursor: pointer;
                }
                
                // 伪元素选择器
                &::before {
                    content: "→ ";
                    color: #007bff;
                }
            }
            
            text { "带有局部样式规则的元素" }
        }
    }
}